            </li>
            <li><a class="dropdown-item" href="/logout">LogOut</a></li>
          </ul>
        </li>
        <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>

    </div>
  </nav>



  <main>
    <div class="container-fluid">
      <div style="text-align: center;">
        <button id="postjob" data-bs-toggle="modal" data-bs-target="#jobDialog" class="btn btn-success"
          value="Post Job">Post Job</button>
      </div>
      <div class="jobholder mb-4 mt-4" style="height: 75vh;max-height: 75vh;overflow-y: scroll;">

      </div>
    </div>
  </main>


  <!-- JobDialog -->
  <form action="/setjob" onsubmit="postjb(event)" method="post" enctype="multipart/form-data">
  <div class="modal fade" id="jobDialog" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen-md-down">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Post Job</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <div class="input-group my-2">
            <span class="input-group-text" id="basic-addon1">Title</span>
            <input name="pjttl" id="pjttl" type="text" class="form-control ip"
              placeholder="Softwareenjiner,mechaniaclenjineer,doctor-type,techer,intern etc" aria-label="Username"
              aria-describedby="basic-addon1">
          </div>

          <div class="input-group my-2">
            <span class="input-group-text" id="basic-addon1">Email</span>
            <input name="pjemail" id="pjemail" type="text" value=<%=data.cpemail%> class="form-control ip"
            placeholder="" aria-label="Username"
            aria-describedby="basic-addon1">
          </div>

          <div class="input-group my-2">
            <span class="input-group-text" id="basic-addon1">For</span>
            <input type="radio" name="pjgender" value="male" class="ip form-check-input ms-3">Male <input type="radio"
              name="pjgender" value="female" class="ip form-check-input ms-3">Female
          </div>

          <div class="input-group my-2">
            <span class="input-group-text">Salary</span>
            <input name="pjsalary" id="pjsalary" type="number" class="ip form-control" style="max-width: 50%;"
              placeholder="Salary">
            <!-- <span class="input-group-text">OR</span> -->
            <!-- <input name="pjsalary" id="pjsalary1" type="range" class="ip form-control" style="max-width: 70%;" min="0" step="5000" max="100000"> -->
          </div>

          <div class="input-group my-2">
            <span class="input-group-text" id="basic-addon1"> File : </span>
            <input name="pjfile" id="pjfile" accept=".pdf" type="file" class="ip form-control">
          </div>

          <div class="input-group my-2">
            <span class="input-group-text" id="basic-addon1"> Poster : </span>
            <input name="pjposter" id="pjposter" accept=".jpg,.png,.jfif,.webp,.jpeg" type="file" class="ip form-control">
          </div>

          <div class="input-group my-2">
            <span class="input-group-text" id="basic-addon1">Description</span>
            <textarea name="pjdisc" id="pjdisc" name="" id="" class="ip form-control" cols="50" rows="3"
              placeholder="Write Something">

            </textarea>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" id="pjpost" class="btn btn-primary">Post</button>
        </div>
      </div>
    </div>
  </div>
</form>



